<infinispan
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:infinispan:config:8.1 http://www.infinispan.org/schemas/infinispan-config-8.1.xsd"
    xmlns="urn:infinispan:config:8.1">

  <cache-container default-cache="default">
    <transport cluster="HawkularMetrics"/>

    <distributed-cache name="rawData" mode="ASYNC">
      <groups enabled="true"/>
    </distributed-cache>

    <distributed-cache name="rollup300" mode="ASYNC">
      <groups enabled="true"/>
    </distributed-cache>

    <distributed-cache name="rollup3600" mode="ASYNC">
      <groups enabled="true"/>
    </distributed-cache>
  </cache-container>
</infinispan>